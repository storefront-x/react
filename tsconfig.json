{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "#ioc/*": ["./.sfx/ioc/*"],
      "~/*": ["./*"],
    },
    "types": ["node", "vitest/globals"],
  },
  "include": ["modules/**/*", ".sfx/**/*"],
  "exclude": [".sfx/vite"],
}
